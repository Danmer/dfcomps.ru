{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "jest"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
  "include": ["**/*.ts"]
}
